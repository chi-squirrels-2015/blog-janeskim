<h2>Submit An Essay</h2>

<%= form_for :essay, url: essays_path do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date%>
  </p>

  <p>
    <%= f.label :publication %><br>
    <%= f.text_field :publication %>
  </p>

  <p>
    <%= f.label :essay_text %><br>
    <%= f.text_area :essay_text, :size => "100x70" %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>